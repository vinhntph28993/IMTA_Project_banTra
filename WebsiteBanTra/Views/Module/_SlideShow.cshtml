@model IEnumerable<WebsiteBanTraiCay.Models.MSlider>
<div id="sync1" class="owl-carousel">
    @{int index = 0;}
    @foreach (var s in Model)
    {
        if (index == 0)
        {
            <div class="item synced">
                <a href="#">
                    <img src="~/Public/images/sliders/@s.Image" alt="@s.Name" width="100%" height="450px">
                </a>
            </div>
        }
        else
        {
            <div class="item ">
                <a href="#">
                    <img src="~/Public/images/sliders/@s.Image" alt="@s.Name" width="100%" height="450px">
                </a>
            </div>
        }
        index++;
    }
</div>
