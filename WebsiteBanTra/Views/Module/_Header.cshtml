    {
        if (c.ParentID == 0)
        {
                        <li class="current-dropdown__item">

                            <a class="current-dropdown__link" href="~/@c.Slug">@c.Name</a>
                            @*<ul class="current-dropdown__list-nav">

            @foreach (var d in Model)
            {
                if (c.ID == d.ParentID)
