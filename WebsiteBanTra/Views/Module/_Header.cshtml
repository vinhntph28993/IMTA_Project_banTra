                                    <div class="">
                                        @foreach (var t in ViewBag.Promotion)
                                        {
                                            <div class="promo float-left"> <a href="@t.Slug" class="text-dark text-decoration-none">@t.Title</a> </div>
                                        }

                                    </div>
                                </div>
                            </li>

                            @Html.Action("MainMenu", "Module")
                            <li class="header__main__nav__item"><a class="header__main__nav_link" href="@Url.Action("Contact","Site")">LIÊN HỆ</a> </li>
                        </ul>
                    </div>
                    <div class="header__main__nav-right">
                        <ul class="header__main__nav-right__list">
                            <li class="main__nav-right__item">
                                <a class="main__nav-right__item__link" href="">
                                    <i class="fa-solid fa-magnifying-glass"></i>
                                </a>
                                <div class="main__nav__item-search">
                                    @using (Html.BeginForm("Search", "Site", FormMethod.Get, new { @class = "form-search-top" }))
                                    {
                                        <div class="main__nav__item-box-search">

                                            <input type="text" name="key" id="" value="@(Session["keywords"] ?? "")" placeholder="Tìm kiếm...">
                                            <button type="submit">
                                                <i class="fa-solid fa-magnifying-glass"></i>
                                            </button>


                                        </div>
                                    }
                                </div>
                            </li>

                            <li class="main__nav-right__item  main__nav-right__item__link-user">
                                <p class="main__nav-right__item__link">
                                    @Html.Action("Login", "Module")

                                </p>

                            </li>
                            <li class="main__nav-right__item">
                                <a class="main__nav-right__item__link " href="~/cart">

                                    <i class="fa-solid fa-cart-shopping"></i>
                                    <div class="main__nav-right__item-cart">
                                        <div class="main__nav-right__item-cart-count">
                                            <span class="count-cart slc">
                                                @(Session["Cart"] != null ? ((List<WebsiteBanTraiCay.Library.ModelCart>)Session["Cart"]).Count() : 0)
                                            </span>

                                        </div>
                                    </div>
                                </a>
                                <div class=" list-cart">

                                    @if (Session["Cart"] != null)
                                    {
                                        <div class="cart-box">
                                            @{double Tong = 0;}
                                            @foreach (var c in (List<WebsiteBanTraiCay.Library.ModelCart>)Session["Cart"])
                                            {
                                                Tong += (c.Price * c.Quantity);


                                                <div class="cart-box-item">
                                                    <a class="cart-box-item-img-link" href="~/@c.Slug">
                                                        <img class="cart-box-item-img" src="~/Public/images/products/@c.Image" alt="@c.Name">
                                                    </a>
                                                    <div class="cart-box-item-info">
                                                        <div class="cart-box-item-name">
                                                            <a class="cart-box-item-name-link" href="~/@c.Slug">@c.Name</a>
                                                        </div>
                                                        <div class="cart-box-item-quantity-price">
                                                            <span class="cart-box-item-price">@c.Price.ToString("N0") ₫</span>
                                                            <span> x</span>
                                                            <div class="quantity-product">
                                                                <span class="cart-box-item-quantity">@c.Quantity</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="remove-cart">
                                                        <a href="javascript:void(0)" data-toggle="tooltip" data-placement="right" class="m-remove-one"
                                                           data-id="@c.ProductID" title="Xóa khỏi giỏ hàng">
                                                            <i class="fa-solid fa-x"></i>
                                                        </a>
                                                    </div>
                                                </div>

                                            }
                                        </div>

                                        <div class="total-price-box">
                                            <span>Tạm tính:</span>
                                            @Tong.ToString("N0")₫
                                            <div class="total-price"> </div>
                                        </div>

                                        <div class="btn-cart-box-buy">
                                            <a class="btn-cart-link-buy" href="~/cart">THANH TOÁN</a>

                                        </div>
                                    }
                                    else
                                    {
                                        <div class="t text-center">
                                            <img src="~/Public/images/null.png" alt="Trống" width="100">
                                            <div class="pb-5 font-weight-bold " style="opacity: .6;">
                                                Giỏ hàng của bạn trống
                                            </div>
                                        </div>
                                    }

                                </div>




                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

</header>

