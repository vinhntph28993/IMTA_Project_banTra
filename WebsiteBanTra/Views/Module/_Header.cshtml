            </div>
            <div class="header__main">
                <div class="container">
                    <div class="header__main__logo">
                        <a href="/">
                            <img src="~/Public/images/iconweb/@ViewBag.configs.LogoWeb" alt="@ViewBag.configs.Name" width="90" height="27">
                        </a>
                    </div>
                    <div class="header__main__nav">
                        <ul class="header__main__nav__list">
                            <li class="header__main__nav__item"> <a class="header__main__nav_link" href="/">TRANG CHỦ</a></li>
                            <li class="header__main__nav__item"><a class="header__main__nav_link" href="about">GIỚI THIỆU</a> </li>
                            <li class="header__main__nav__item">
                                <a class="header__main__nav_link" href="~/product">
                                    CỬA HÀNG
                                    <i class="fa-solid fa-chevron-down"></i>
                                </a>
                                <div class="main__nav__item__current-dropdown">
                                    <ul class="current-dropdown__list">
                                        <li class="current-dropdown__item">

                                            <a class="current-dropdown__link" href="~/product">Tất cả sản phẩm</a>
                                        </li>

                                        @{int i = 1; }
