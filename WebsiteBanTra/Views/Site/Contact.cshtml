
@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
@Html.Partial("_Nofit")
<div class="container-91 row my-2 mb-5">
    <div class="col-6">
        <iframe src="https://www.google.com/maps/embed?pb=@ViewBag.Config.Google_Maps" width="100%" height="700" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
     </div>
    <div class="col-6">
        <div class="ml-2">
            <h2 class="my-4">Liên hệ</h2>
            <div class="my-3">
                <small class="text-secondary">Địa chỉ của chúng tôi: @ViewBag.Config.Address</small>
                
            </div>
            <div class="my-3">
                <small class="text-secondary">Email chúng tôi: @ViewBag.Config.Gmail</small>
              
            </div>
            <div class="my-3">
                <small class="text-secondary">Điện thoại: @string.Format("0{0:#### ### ###}", Convert.ToInt64(@ViewBag.Config.Phone))</small>

            </div>
            <div class="my-3">
                <small class="text-secondary">
                    Thời gian làm việc: Tất cả các ngày trong tuần, từ 8h30
                    đến 17h30
                </small>
      
                    
                </strong>
            </div>


            <h4 class="my-4">Gửi thắc mắc cho chúng tôi</h4>

            <style>
                .form-contact input {
                    padding: 20px;
                    color: #333;
                }

                    .form-contact input::placeholder {
                        padding: 0;
                    }

                .form-contact textarea::placeholder {
                    padding: 0;
                }
            </style>

            <!--form-->
            <form class="form-contact" method="POST" action="Site/SubmitContact">

                <div class="form-group mb-4">
                    <input type="text" name="Fullname" class="form-control rounded-0 py-4 bg-light" aria-describedby="emailHelp" placeholder="Tên của bạn" required="" style="">
                </div>
                <div class="row mb-2 p-0">
                    <div class="form-group col-6">
                        <input type="email" name="Email" class="form-control rounded-0 py-4 bg-light" placeholder="Email của bạn" required="">
                    </div>
                    <div class="form-group col-6">
                        <input type="text" name="Phone" class="form-control rounded-0 py-4 bg-light" placeholder="Số điện thoại của bạn" required="" pattern="[0-9]{10,12}">
                    </div>
                </div>
                <div class="form-group mb-4">
                    <input type="text" name="Title" class="form-control rounded-0 py-4 bg-light" placeholder="Tiêu đề" required="">
                </div>
                <div class="form-group">
                    <textarea name="Detail" class="form-control rounded-0 bg-light pl-3" id="" rows="4" placeholder="Nội dung" required=""></textarea>
                </div>

                <button type="submit" class="btn btn-dark rounded-0 py-2 px-4 ">
                    <small>
                        GỬI CHO CHÚNG TÔI
                    </small>
                </button>
            </form>
        </div>
    </div>
</div>


