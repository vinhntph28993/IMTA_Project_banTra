                <i class="fa-solid fa-angle-left left"></i>
                <img src="~/Public/images/products/@Model.Image" alt="">
                
                <i class="fa-solid fa-angle-right right"></i>
                <div class="box-discount-product">
                    <span> @String.Format("{0:0}", ((Model.Price - Model.ProPrice) / Model.Price * 100))%</span>
                </div>
                <div class="col-12">
                    <div class="border mt-4">
                        <div class=" font-weight-bold text-center h6 py-2 mt-2" style="color: #288ad6 ">
