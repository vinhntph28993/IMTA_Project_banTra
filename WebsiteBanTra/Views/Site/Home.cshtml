<div class="home-slider bg-" >
    @Html.Action("HomeSlideShow", "Module")
</div>
<div class="promo-so">
    <div class="product">
        <div class="container">
            <div class="product__box">
                <div class="product__box-content">
                    <h2>Sản Phẩm Khuyến Mãi</h2>

                </div>
                <div class="product__box-products">
                    @foreach (var p in ViewBag.PromotionProduct)
                    {
                        <div class="product__box-products-item">
                            <a class="product__box-products-item-img" href="@p.Slug">
                                @if (p.Installment == 1)
                                {

                                }
                                <img class="img-current" src="~/Public/images/products/@p.ImageList" alt="">
                            </a>
                            <div class="product__box-info-product">
                                <a class="product__box-name-product" href="@p.Slug">
                                    <span>
                                        @p.Name
                                    </span>
                                </a>
                                <div class="product__box-info-product-price">
                                    <span class="price-current">
                                        @String.Format("{0:0,0₫}", p.Price)

                                    </span>
                                    <span class="price-sale">
                                        @String.Format("{0:0,0₫}", p.ProPrice)

                                    </span>
                                </div>
                            </div>
                            @*<div class="add-product-box">
                                <div class="add-product">
                                    <i class="fa-solid fa-cart-shopping"></i>
                                </div>
                            </div>*@
                            <div class="box-discount">
                                <span class="percent-discount">
                                    -@String.Format("{0:0}", ((p.Price - p.ProPrice) / p.Price * 100))%
                                </span>

                            </div>
                        </div>



                    }
                </div>

            </div>

        </div>
        <div class="container all-product">
            <a rel="" href="~/product">
                <button>
                    Xem thêm sản phẩm
                </button>
            </a>
        </div>
    </div>
</div>


