@model IEnumerable<WebsiteBanTraiCay.Models.MCategory>
@{
    ViewBag.Title = @ViewBag.Configs.Name ;
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
@*<div class="home-slider bg-" style="background:#f3f3f3">
