@model WebsiteBanTraiCay.Models.MMenu

@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-6">
        <br />
        <h1>Menu</h1>

    </div>

    <div class="col-lg-5">


    </div>

    <div class="col-lg-1">
        <br /><br />


        <a href="@Url.Action("Index", "Menu")" class="btn btn-danger fa fa-share-square">
            Trở về
        </a>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">

                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-8">
                            <label>Tên Menu:</label>

                            @Html.Raw(Model.Name)
                            <br />
                            <label>Ngày tạo:</label>

                            @Html.Raw(Model.Created_at)
                        </div>
                        <div class="col-md-4">
                            <label>ID:</label>

                            @Html.Raw(Model.Id)
                            <br />
                            <label>Ngày sửa:</label>

                            @Html.Raw(Model.Updated_at)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>