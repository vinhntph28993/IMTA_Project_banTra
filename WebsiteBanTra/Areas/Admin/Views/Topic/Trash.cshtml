@model IEnumerable<WebsiteBanTraiCay.Models.MTopic>
@{
    ViewBag.Title = "Thùng rác chủ đề bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <!--Content-->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-8">
                        @Html.Partial("_MessageAlert")
                        <h5 class="text-csm">@ViewBag.Title</h5>
                    </div>
                    <div class="col-4">
                        <div class="float-right pt-1">

                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="~/Admin/Topic" class="text-white"> <i class="fas fa-sign-out-alt "></i>&nbsp; Thoát</a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="cate1" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="text-center no-sort" style="width:3rem;">ID</th>
                            <th class="no-sort">Tên danh mục</th>
                            <th class="no-sort">Cấp cha</th>
                            <th class="no-sort">Ngày tạo</th>
                            <th class="no-sort text-center" style="width:10rem">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@item.ID</td>
                                <td><a href="#">@item.Name</a>  </td>
                                <td>
                                    <a href="#">
                                        @item.ParentID

                                    </a>
                                </td>
                                <td>@item.Created_at</td>

                                <td class="text-center">
                                    <button type="button" class="btn btn-info btn-sm" data-toggle="tooltip" data-placement="top" title="Khôi phục">
                                        <a href="@Url.Action("ReTrash", "Topic", new { id = item.ID })" class="text-white"><i class="fas fa-undo-alt"></i></a>
                                    </button>
                                    <button type="button" class="btn btn-secondary btn-sm" data-toggle="tooltip" data-placement="top" title="Xóa vĩnh viễn">
                                        <a href="@Url.Action("Delete", "Topic", new { id = item.ID })" class="text-white"><i class="far fa-trash-alt"></i></a>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>