@model IEnumerable<WebsiteBanTraiCay.Models.ListOrder>
@{
    ViewBag.Title = "Thùng rác đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.Partial("_MessageAlert")
<section class="content py-2">
    <div class="container-fluid">
        <!--Content-->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-8">
                        <h5 class="text-csm">@ViewBag.Title</h5>
                    </div>
                    <div class="col-4">
                        <div class="float-right pt-1">
                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="~/Admin/Order" class="text-white"><i class="far fa-trash-alt fa-xs"></i>&nbsp; Thoát</a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table class="table table-bordered table-hover" style="font-size:15px">
                    <thead>
                        <tr>
                            <th class="text-center no-sort text-dark" style="width:3rem;">#</th>
                            <th class="text-primama"> Khách hàng </th>

                            <th class="no-sort text-primama text-right">Tổng tiền</th>
                            <th class="no-sort text-primama">Ngày Đặt</th>
                            <th class="no-sort text-primama">ExportDate</th>
                            <th class="no-sort text-center text-primama" style="width:10rem">Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var c in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @c.ID
                                </td>
                                <td>
                                    <a href="admin/order/detail?id=<%= cat.IDO%>">
                                        @c.CustomerName
                                    </a>
                                </td>

                                <td class="text-right">
                                    @String.Format("{0:0,0₫}", c.SAmount)
                                </td>
                                <td>
                                    @c.CreateDate
                                </td>
                                <td>
                                    @c.ExportDate
                                </td>

                                <td class="text-center">
                                    <button type="button" class="btn btn-info btn-sm" data-toggle="tooltip" data-placement="top" title="Khôi phục">
                                        <a href="@Url.Action("Undo", "Order", new { id = c.ID })" class="text-white"><i class="fas fa-undo-alt"></i></a>
                                    </button>
                                    <button type="button" class="btn btn-secondary btn-sm" data-toggle="tooltip" data-placement="top" title="Xóa vĩnh viễn">
                                        <a href="@Url.Action("Delete", "Order", new { id = c.ID })" class="text-white"><i class="far fa-trash-alt"></i></a>
                                    </button>
                                </td>

                            </tr>
}
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</section>
