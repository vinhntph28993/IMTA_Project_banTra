@{ ViewBag.Title = "Quên mật khẩu";
    }
@Html.Partial("_MessageAlert")

<!DOCTYPE html>
<html>





<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title - Quản lý website</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.ckeditor.com/ckeditor5/19.1.1/decoupled-document/ckeditor.js"></script>
    <link rel="stylesheet" href="~/Public/Admin/css/all.min.css">

    <link href="~/Public/Admin/images/icon-256x256.png" rel="shortcut icon" type="image/x-icon" />

    <link href="~/Public/Admin/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet">

    <link href="~/Public/Admin/css/summernote-bs4.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/Public/Admin/css/adminlte.min.css">
    <link rel="stylesheet" href="~/Public/Admin/css/OverlayScrollbars.min.css">

    <link rel="stylesheet" href="~/Public/Admin/css/dataTables.bootstrap4.min.css">
    <link href="~/Public/Admin/css/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Public/Admin/css/style.css">
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="~/Public/Admin/css/font-sans.pro.css">
    <style>
        .note-editable {
            min-height: 200px;
        }

        .note-toolbar {
            margin: 0 auto;
            padding: 5px 0;
        }

        .text-csm {
            font-family: Arial, Helvetica, sans-serif;
            color: #dc3545;
            font-weight: bold;
            text-transform: uppercase;
            font-size: 17px;
            padding: 10px 0 0 10px;
        }
    </style>
</head>

<body class="hold-transition login-page">
    <div class="h-100 w-100 position-absolute" style="background-image:url(../../../../Public/images/bg-01.jpg);background-size: 100% auto; z-index:-1; opacity:.6"></div>
    <div class="overlay justify-content-center align-items-center d-none bg-secondary w-100 h-100 position-absolute" style="z-index:1; opacity:.3"><i class="fas fa-2x fa-sync fa-spin"></i></div>
    <div class="login-box">

        
        <div class="login-logo">
            <img src="~/Public/images/user2-160x160.jpg" class="d-block rounded-circle mx-auto" width="80" />
            <a href="javascript:void(0)" class="text-light"> <b> Quên mật khẩu</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Bạn quên mật khẩu của mình? Tại đây bạn có thể dễ dàng lấy lại mật khẩu mới.</p>
                @using (Html.BeginForm())
                {
    <div class="input-group mb-3">
        @Html.TextBox("EmailID", "", new { @class = "form-control" })
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-envelope"></span>
            </div>
        </div>
    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">GỬI</button>
                        </div>
                        <!-- /.col -->
                    </div>}

                <p class="mt-3 mb-1">
                    <a href="~/Admin"><i class="fas fa-arrow-alt-circle-left"></i> Quay lại trang đăng nhập</a>
                </p>
                @*<p class="mb-0">
                    <a href="~/Admin/User/Create" class="text-center">Tạo mới tài khoản</a>
                </p>*@
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>





    <script src="~/Public/Admin/js/jquery.min.js"></script>
    <script src="~/Public/Admin/js/bootstrap.bundle.min.js"></script>

    <script src="~/Public/Admin/js/jquery.overlayScrollbars.min.js"></script>
    <script src="~/Public/Admin/js/adminlte.min.js"></script>

    <script src="~/Public/Admin/js/jquery.dataTables.min.js"></script>
    <script src="~/Public/Admin/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Public/Admin/js/karma.laclac.min.js"></script>

    <script src="~/Public/Admin/js/summernote-bs4.min.js"></script>

    <script src="~/Public/Admin/js/j.js"></script>
    <script src="~/Public/Admin/js/toastr.min.js"></script>
    <script>$(function () { $('.textarea').summernote() })</script>

</body>

</html>












