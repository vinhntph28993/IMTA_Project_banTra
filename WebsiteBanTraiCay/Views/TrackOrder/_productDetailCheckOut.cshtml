@model IEnumerable<WebsiteBanTraiCay.Models.MOrderDetail>


<table class="table order-details-table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Tổng tiền</th>
        </tr>
    </thead>
    <tbody>
        @{ int sum = 0;}
        @foreach (var item in Model)
        {
            sum += (int)item.Amount;
            <tr>
                <td>
                    @Html.Action("subnameProduct", "TrackOrder", new { id = item.ProductID })
                    <strong>× @item.Quantity</strong>
                </td>
                <td><span>@item.Amount.ToString("N0") VND</span></td>
            </tr>
        }

    </tbody>
    <tfoot>
        <tr>
            <th>Tạm tính:</th>
            <td><span>@sum.ToString("N0") VND</span></td>
        </tr>
        <tr>
            <th>Phương thức thanh toán:</th>
            <td>Thanh toán khi nhận hàng</td>
        </tr>
        <tr>
            <th>Tổng:</th>
            <td><span>@sum.ToString("N0") VND</span></td>
        </tr>
    </tfoot>
</table>